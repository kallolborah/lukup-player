<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lukup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/homeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            android:layout_centerInParent="true" >
        </ImageView>        
<!--         android:src="@drawable/home" -->
    </RelativeLayout>
    
		 <RelativeLayout
		     android:id="@+id/progresLayout"
		     android:layout_width="100dip"
		     android:layout_height="100dip"
		     android:layout_centerInParent="true"
		     android:visibility="invisible" >

<!-- 		     <ProgressBar -->
<!-- 		         android:id="@+id/progressBar" -->
<!-- 		         style="?android:attr/progressBarStyle" -->
<!-- 		         android:layout_width="100dip" -->
<!-- 		         android:layout_height="100dip" -->
<!-- 		         android:indeterminateDrawable="@drawable/progress_indeterminate" -->
<!-- 		         android:visibility="visible" /> -->
		 </RelativeLayout>
		 
		<TextView
	        android:id="@+id/network"
	        android:layout_marginBottom="85dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="34dip"
	        android:visibility="invisible"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:text="Loading...."
	        android:textStyle="bold"
	        android:textColor="#4D68B1" />
    
<!--     android:visibility="invisible" -->
    

	<RelativeLayout
        android:id="@+id/hometop"
        android:layout_width="fill_parent"
        android:layout_height="144dip" 
        android:visibility="invisible"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip">
        <LinearLayout
	        android:id="@+id/hometitle"
	        android:layout_width="460dip"
	        android:layout_height="wrap_content" 
	        android:background="@drawable/bg_top_title">
	   		<LinearLayout
		        android:id="@+id/innerlayout"
		        android:layout_marginLeft="14dip"
        		android:layout_marginRight="14dip"
		        android:layout_gravity="center_vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        <TextView
		            android:id="@+id/title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:textSize="22dip"
		            android:text=""
		            android:textColor="#ffffff" />
		        <TextView
		            android:id="@+id/desc"
		            android:layout_below="@+id/title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:maxLines="5"
		            android:ellipsize="end"
		            android:textSize="16dip"
		            android:text=""
		            android:textColor="#ffffff" />
		        
		        <Button 
		            android:id="@+id/gobutton"
		            android:layout_width="50dip"
		            android:layout_height="24dip"
		            android:background="#DDAEA8A8"
		            android:layout_marginTop="8dip"
		            android:textSize="14dip"
		            android:text="Go"
		            android:textStyle="bold"
		            android:textColor="#ffffff"/>
	   		</LinearLayout>
    	</LinearLayout>
    	
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dip"
            android:layout_height="44dip"
            android:layout_marginRight="12dip"
        	android:layout_marginTop="12dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/logo_lukup"
            android:layout_centerInParent="true" >
        </ImageView>
        
    </RelativeLayout>
    
	<FrameLayout
        android:id="@+id/fragment_container"
        android:foregroundGravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  >
    </FrameLayout>

</RelativeLayout>